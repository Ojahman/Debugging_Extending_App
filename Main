package com.company;

import java.util.*;
import java.lang.*;
import java.io.*;

public class Main {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Hello, how has your day been?");
        String day = input.nextLine();
        System.out.println("I am glad to hear that your day was " + day +"!" );
    }
}
